{
  "name": "saudi-ai-platform",
  "version": "1.0.0",
  "private": true,
  "description": "Enterprise AI Platform for Saudi Arabia with RAG capabilities",
  "overrides": {
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0"
  },
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && python main.py",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "echo 'Backend build completed'",
    "start": "concurrently \"npm run start:frontend\" \"npm run start:backend\"",
    "start:frontend": "cd frontend && npm start",
    "start:backend": "cd backend && python -m uvicorn backend.main:app --host 0.0.0.0 --port 8000",
    "install:all": "npm install && cd frontend && npm install",
    "docker:up": "docker-compose up --build",
    "docker:down": "docker-compose down",
    "lint": "cd frontend && npm run lint",
    "lint:fix": "cd frontend && npm run lint:fix",
    "test": "cd frontend && npm test",
    "clean": "rm -rf frontend/node_modules frontend/.next && npm run clean:deps",
    "clean:deps": "cd frontend && npm cache clean --force"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-repo/saudi-ai-platform"
  },
  "keywords": [
    "ai",
    "saudi-arabia",
    "rag",
    "chatbot",
    "enterprise",
    "fastapi",
    "nextjs"
  ],
  "author": "Saudi AI Platform Team",
  "license": "MIT"
}